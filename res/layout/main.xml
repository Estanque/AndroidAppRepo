<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="vertical"
			  android:layout_width="fill_parent"
			  android:layout_height="fill_parent"
			  android:background="@color/myColor">
	<Button
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="Count Crows"
			android:id="@+id/buttonCrows"
			android:onClick="buttonCrows_Click"
			android:layout_gravity="center"/>
	<Button
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="Count Cats"
			android:id="@+id/buttonCats"
			android:layout_gravity="center"/>
	<TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="@string/helloText"
			android:id="@id/textView1" android:gravity="center" android:password="false" android:textStyle="bold"
			android:textSize="40dp" android:textIsSelectable="false" android:textColor="@android:color/black"/>
</LinearLayout>

